# Phase 9: Staging Environment Variables
# Copy this to .env.staging and fill in actual values

# App Configuration
NEXT_PUBLIC_APP_URL="https://staging.kobonz.com"
NODE_ENV="production"

# Database (Neon PostgreSQL - Staging Branch)
# Use Neon branching: staging branch from main
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/kobonz-staging?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/kobonz-staging?sslmode=require"

# NextAuth.js
NEXTAUTH_SECRET="your-staging-secret-key-different-from-prod"
NEXTAUTH_URL="https://staging.kobonz.com"

# Upstash Redis (can share with prod or use separate instance)
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Email (Resend - same as prod is fine)
RESEND_API_KEY="re_xxxxxxxxxxxxx"
RESEND_FROM_EMAIL="staging@kobonz.com"

# Error Monitoring (Sentry - separate environment)
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-org"
SENTRY_PROJECT="kobonz-next"
SENTRY_ENVIRONMENT="staging"
